  <script>
    function navigate(to) {
      const sections = ['login', 'dashboard', 'portfolio', 'goals', 'market', 'extras'];
      sections.forEach(id => document.getElementById(id).classList.add('hidden'));
      document.getElementById(to).classList.remove('hidden');
    }

    document.getElementById('goalForm').addEventListener('submit', async (e) => {
      e.preventDefault();
      const goalName = document.getElementById('goalName').value;
      const amount = parseFloat(document.getElementById('goalAmount').value);
      const years = parseInt(document.getElementById('goalYears').value);

      try {
        const res = await fetch('http://localhost:3000/api/goals', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ goalName, amount, years })
        });
        const data = await res.json();
        if (!res.ok) return document.getElementById('goalResult').innerText = `âŒ Could not save goal. ${data.error}`;

        document.getElementById('goalResult').innerHTML = `
          âœ… Goal: <strong>${data.goalName}</strong><br>
          ğŸ¯ Target: â‚¹${data.total} in ${data.years} years<br>
          ğŸ’¸ Monthly: â‚¹${data.monthly}<br>
          ğŸ“† Quarterly: â‚¹${data.quarterly}<br>
          ğŸ“… Yearly: â‚¹${data.yearly}<br>
          ğŸ“ˆ Weekly: â‚¹${data.weekly}<br>
          ğŸ•’ Daily: â‚¹${data.daily}`;
      } catch (err) {
        document.getElementById('goalResult').innerText = 'âŒ Failed to connect to server.';
      }
    });

    function analyzeRisk() {
      const age = document.getElementById('ageGroup').value;
      let message = '';
      if (age <= 30) message = 'ğŸ“Š High-risk recommended (Stocks, Crypto)';
      else if (age <= 50) message = 'ğŸ“ˆ Balanced risk (Stocks + Mutual Funds)';
      else message = 'ğŸ”’ Low risk preferred (FDs, Bonds, PPF)';
      document.getElementById('riskOutput').innerText = message;
    }

    function addWatchlist() {
      const item = document.getElementById('watchInput').value;
      if (item) {
        const li = document.createElement('li');
        li.textContent = item;
        document.getElementById('watchlistDisplay').appendChild(li);
        document.getElementById('watchInput').value = '';
      }
    }

    // Chart.js Comparison
    const ctx = document.getElementById('comparisonChart').getContext('2d');
    new Chart(ctx, {
      type: 'bar',
      data: {
        labels: ['Stocks', 'Mutual Funds', 'FDs'],
        datasets: [{
          label: 'Expected Return %',
          data: [12, 8, 6],
          backgroundColor: ['#00f7ff80', '#00ffcc80', '#ffaa0080']
        }]
      },
      options: {
        scales: { y: { beginAtZero: true } }
      }
    });
  </script>
